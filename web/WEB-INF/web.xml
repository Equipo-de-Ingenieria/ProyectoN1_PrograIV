<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>servlets.UserSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/UserInfo</url-pattern>
        <url-pattern>/user-registry</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateAccServlet</servlet-name>
        <servlet-class>servlets.CreateAccountSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateAccServlet</servlet-name>
        <url-pattern>/CreateAcc</url-pattern>
        <url-pattern>/createacc-registry</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreateUserServlet</servlet-name>
        <servlet-class>servlets.CreateUserSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUserServlet</servlet-name>
        <url-pattern>/CreateUser</url-pattern>
        <url-pattern>/createuser-registry</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>servlets.UpdateAccountSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <url-pattern>/UpdateAccount</url-pattern>
        <url-pattern>/update-account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DepositServlet</servlet-name>
        <servlet-class>servlets.DepositSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DepositServlet</servlet-name>
        <url-pattern>/DepositServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>RetireServlet</servlet-name>
        <servlet-class>servlets.RetireSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RetireServlet</servlet-name>
        <url-pattern>/RetireServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CreditServlet</servlet-name>
        <servlet-class>servlets.CreditSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreditServlet</servlet-name>
        <url-pattern>/CreditServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>
            TransferServlet
        </servlet-name>
        <servlet-class>
            servlets.TransferServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>
            TransferServlet
        </servlet-name>
        <url-pattern>
            /TransferClient
        </url-pattern>
        <url-pattern>
            /transfer-client
        </url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SyncServlet</servlet-name>
        <servlet-class>servlets.SyncSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SyncServlet</servlet-name>
        <url-pattern>/Sync</url-pattern>
        <url-pattern>/sync-account</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ClientTransferServlet</servlet-name>
        <servlet-class>servlets.ClientTransferSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ClientTransferServlet</servlet-name>
        <url-pattern>/ClientTransfer</url-pattern>
        <url-pattern>/client-transfer</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MovementServlet</servlet-name>
        <servlet-class>servlets.movementSrv</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MovementServlet</servlet-name>
        <url-pattern>/movement</url-pattern>
        <url-pattern>/client-movement</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
